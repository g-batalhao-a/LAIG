<lsf>
    <initials>
        <reference length="1" />
        <root id="testRoot" />
    </initials>

    <views default="testCamera">
        <perspective id="testCamera" near="0.2" far="300" angle="60">
            <from x="20" y="20" z="20" />
            <to x="0" y="0" z="0" />
        </perspective>

        <ortho id="testOrtho" near="0.4" far="100" left="-0.5" right="0.5" top="0.5" bottom="-0.5">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </ortho>
    </views>

    <illumination>
        <ambient r="0.5" g="0.5" b="0.5" a="0.6" />
        <background r="0.55" g="0.18" b="0.1" a="1.0" />
    </illumination>


    <lights>
        <light id="testLight">
            <enable value="1" />
            <position x="30" y="30" z="30" w="0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.8" g="0.8" b="0.8" a="1.0" />
        </light>

        <light id="testLight2">
            <enable value="0" />
            <position x="-30" y="-30" z="-30" w="0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.8" g="0.8" b="0.8" a="1.0" />
        </light>
    </lights>


    <textures>
        <texture id="testTexture" path="./flag.png" />
    </textures>


    <materials>
        <material id="testMaterial">
            <shininess value="0.3" />
            <ambient r="0.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.3" b="0.3" a="1.0" />
            <specular r="0.0" g="0.2" b="0.2" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <node id="testRoot">
            <material id="testMaterial" />

            <texture id="testTexture">
                <amplification afs="0.0" aft="0.0" />
            </texture>

            <transformations>
                <translation x="1.0" y="1.0" z="1.0" />
                <rotation axis="z" angle="90" />
                <scale sx="2" sy="0.5" sz="1" />
            </transformations>

            <descendants>
                <noderef id="testChild" />
                <leaf type="rectangle" x1="0" y1="2" x2="1" y2="0" />
            </descendants>
        </node>
        <node id="testChild">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="2.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="0" y1="0" x2="0" y2="1" x3="1" y3="0" z3="0"/>
            </descendants>
        </node>
    </nodes>
</lsf>
